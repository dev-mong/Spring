<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aia.rl.review.dao.ReviewDao">

	<resultMap id="review" type="com.aia.rl.review.model.Review">
		<result column="request_idx" property="reqIdx" />
		<result column="review_receiver" property="receiver" />
		<result column="review_writer" property="writer" />
		<result column="review_text" property="text" />
		<result column="review_avg" property="avg" />
	</resultMap>
	
	<insert id="insertReview" parameterType="com.aia.rl.review.model.Review">
	insert into Mangchi.review
	(request_idx,review_receiver,review_writer,review_avg,review_text)
	values(#{reqIdx},#{receiver},#{writer},#{avg},#{text})
	</insert>
	
	<select id="selectReview" resultMap="review" parameterType="map">
		select * from Mangchi.review where review_writer=#{nick} and request_idx=#{idx}
	</select>
	
	
	
	<!-- 평점  리스트는 여러개 .. ? -->
	<select id="selectReg" resultType="int">
		select avg(review_avg)  from Mangchi.review where review_receiver=#{nick}
	</select>
	
	<select id="reviewList" resultMap="review">
		select * from Mangchi.review where review_receiver=#{nick}
	</select>
	
	<!-- <select id="totalReview" resultType="int">
		select count(*) from Mangchi.review where review_receiver=#{nick}
	</select> -->
	
</mapper>